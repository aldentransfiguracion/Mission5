
@{
    ViewBag.Title = "Calculator";
}

<h2>Calculator</h2>

<form id="calculatorForm">
    <label for="hours">Enter number of hours needed:</label>
    <input type="number" id="hours" name="hours" min="1" required />
    <br />
    <br />
    <label for="hourlyRate">Hourly rate:</label>
    <input type="text" id="hourlyRate" value="$50" readonly />
    <br />
    <br />
    <button type="button" id="calculateButton">Calculate Total</button>
    <br />
    <br />
    <label for="total">Total:</label>
    <input type="text" id="total" readonly />
</form>

